<div id="vendor-single">
    <div class="container">
        <div id="vendor-description">
            <!-- FOR DESKTOP --------------------------------------------------------------------------------------- FOR DESKTOP -->
            <div class="row hidden-sm hidden-xs">
                <div class="col-sm-5">
                    <div class="feat-img" style="background-image: url(/{{vendor.featured_image}})">
                        {{#if vendor.is_featured}}
                            <div class="ribbon-wrapper"><div class="ribbon">FEATURED</div></div>
                        {{/if}}
                        {{#if userActive}}
                            <img src="/images/heart-fill.png" class="favorite-heart fill {{#if vendor.favorite}}favorited{{/if}}" data-vendor="{{vendor.vendor_id}}" alt="Click to favorite this vendor.">
                            <img src="/images/heart-outline.png" class="favorite-heart outline" alt="">
                        {{/if}}
                    </div>
                    <div class="info-box">
                        <div class="row">
                            <div class="vend-info">
                                <div class="col-sm-3">
                                    <span>Address: </span>
                                </div>
                                <div class="col-sm-9">
                                    <p class="vend-add">{{vendor.address}}, {{vendor.address_2}}
                                        <br>{{vendor.city}}, {{vendor.province}} {{vendor.postal_code}}</p>
                                </div>
                                <div class="col-sm-3">
                                    <span>Phone: </span>
                                </div>
                                <div class="col-sm-9">
                                    <p class="vend-phone">{{vendor.phone_number}}</p>
                                </div>
                                {{#if vendor.fax}}
                                    <div class="col-sm-3">
                                        <span>Fax: </span>
                                    </div>
                                    <div class="col-sm-9">
                                        <p class="vend-phone">{{vendor.fax}}</p>
                                    </div>
                                {{/if}}
                                {{#if vendor.email}}
                                    <div class="col-sm-3">
                                        <span>Email: </span>
                                    </div>
                                    <div class="col-sm-9">
                                        <a href="{{vendor.email}}" target="_top">{{vendor.email}}</a>
                                    </div>
                                {{/if}}

                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12"><div class="line"></div></div>
                            <div class="col-sm-12">
                                <div class="rate-price-box">
                                    <div class="vendorPrice">
                                        {{#if vendor.price}}
                                            {{vendor.price}}
                                        {{else}}
                                            <p>Not priced.</p>
                                        {{/if}}
                                    </div>
                                    <p class="reviewRating">
                                    {{#if vendor.rating}}
                                        {{vendor.rating}}</p>
                                        <p class="reviewCount"> (
                                            {{#if vendor.ratingCount}}
                                                {{vendor.ratingCount}}
                                            {{else}}
                                                1
                                            {{/if}})</p>
                                    {{else}}
                                        Not rated.</p>
                                    {{/if}}
                                </div>
                                <a class="vend-web" href="{{vendor.url}}" target="_blank">WEBSITE</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-7">
                    <h2>{{vendor.vendor_name}}</h2>
                    <p class="vend-cat">{{vendor.category}}</p>
                    <p class="vend-desc">{{{vendorDesc}}}</p>
                    {{#if access}}
                        <a class="vend-edit-link" href="/vendor/{{vendor.vendor_url}}/edit">Edit Vendor</a>
                    {{/if}}
                </div>
            </div>

            <!-- FOR MOBILE --------------------------------------------------------------------------------------- FOR MOBILE -->
            <div class="row hidden-md hidden-lg hidden-xl">
                <div class="col-sm-12">
                    <h2>{{vendor.vendor_name}}</h2>
                    <p class="vend-cat">{{vendor.category}}</p>
                </div>
                <div class="col-sm-12 mobile-box">
                    <div class="info-box">
                        <div class="row">
                            <div class="vend-info">
                                <div class="col-sm-3">
                                    <span>Address: </span>
                                </div>
                                <div class="col-sm-9">
                                    <p class="vend-add">{{vendor.address}}, {{vendor.address_2}}
                                        <br>{{vendor.city}}, {{vendor.province}} {{vendor.postal_code}}</p>
                                </div>
                                <div class="col-sm-3">
                                    <span>Phone: </span>
                                </div>
                                <div class="col-sm-9">
                                    <p class="vend-phone">{{vendor.phone_number}}</p>
                                </div>
                                {{#if vendor.fax}}
                                    <div class="col-sm-3">
                                        <span>Fax: </span>
                                    </div>
                                    <div class="col-sm-9">
                                        <p class="vend-phone">{{vendor.fax}}</p>
                                    </div>
                                {{/if}}
                                {{#if vendor.email}}
                                    <div class="col-sm-3">
                                        <span>Email: </span>
                                    </div>
                                    <div class="col-sm-9">
                                        <a href="{{vendor.email}}" target="_top">{{vendor.email}}</a>
                                    </div>
                                {{/if}}

                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12"><div class="line"></div></div>
                            <div class="col-sm-12">
                                <div class="rate-price-box">
                                    <div class="vendorPrice">
                                        {{#if vendor.price}}
                                            {{vendor.price}}
                                        {{else}}
                                            <p>Not priced.</p>
                                        {{/if}}
                                    </div>
                                <p class="reviewRating">
                                    {{#if vendor.rating}}
                                        {{vendor.rating}}</p>
                                        <p class="reviewCount"> (
                                            {{#if vendor.ratingCount}}
                                                {{vendor.ratingCount}}
                                            {{else}}
                                                1
                                            {{/if}})</p>
                                    {{else}}
                                        Not rated.</p>
                                    {{/if}}
                                </div>
                                <a class="vend-web" href="{{vendor.url}}" target="_blank">WEBSITE</a>
                            </div>
                        </div>
                    </div>
                    <div class="feat-img" style="background-image: url(/{{vendor.featured_image}})">
                        {{#if vendor.is_featured}}
                            <div class="ribbon-wrapper"><div class="ribbon">FEATURED</div></div>
                        {{/if}}
                        {{#if userActive}}
                            <img src="/images/heart-fill.png" class="favorite-heart fill {{#if vendor.favorite}}favorited{{/if}}" data-vendor="{{vendor.vendor_id}}" alt="Click to favorite this vendor.">
                            <img src="/images/heart-outline.png" class="favorite-heart outline" alt="">
                        {{/if}}
                    </div>
                </div>
                <div class="col-sm-12">
                    <p class="vend-desc">{{{vendorDesc}}}</p>
                    {{#if access}}
                        <a class="vend-edit-link" href="/vendor/{{vendor.vendor_url}}/edit">Edit Vendor</a>
                    {{/if}}
                </div>
            </div>
        </div>

        {{#if gallery}}
            <div id="vendor-gallery">
                <div class="row">
                    <h3>GALLERY</h3>

                    <div class="vendor-grid">

                        {{#each gallery}}
                            <a href="/{{this.photo_url}}" data-toggle="lightbox" data-gallery="vendorGallery" class="vendor-item" >
                                <img src="/{{this.photo_url}}" alt="">
                            </a>
                        {{/each}}

                    </div>
                </div>
            </div>
        {{/if}}


        {{#if userGallery}}
            <div id="user-gallery">
                <div class="row">
                    <h3>USER GALLERY</h3>

                    <div class="user-grid">

                        {{#each userGallery}}
                            <a href="/{{this.photo_url}}" data-toggle="lightbox" data-gallery="userGallery" class="user-item" >
                                <img src="/{{this.photo_url}}" alt="">
                            </a>
                        {{/each}}

                    </div>
                </div>
            </div>
        {{/if}}


        <div id="vendor-reviews">
            <h3>REVIEWS</h3>
            <div class="row">
                {{#if review}}
                    {{#each review}}

                        <div class="col-sm-2">
                            <div class="reviewHead">
                                <div>
                                    <a class="reviewUser" href="">{{this.username}}</a>
                                    <p class="reviewDate">{{this.date}}</p>
                                </div>
                                {{#if ../userActive.admin}}
                                    <form action="/vendor/deletereview" id="review-delete-form" method="post">
                                        <input type="hidden" name="review" value="{{this.id}}">
                                        <input type="hidden" name="vendorName" value="{{../vendor.vendor_url}}">
                                        <input id="delete-review-submit" class="reviewDelete" type="submit" value="DELETE" name="submit">
                                    </form>
                                {{else}}
                                    {{#equal this.user_fid ../userActive.user_id}}
                                        <form action="/vendor/deletereview" id="review-delete-form" method="post">
                                            <input type="hidden" name="review" value="{{this.id}}">
                                            <input type="hidden" name="vendorName" value="{{../vendor.vendor_url}}">
                                            <input id="delete-review-submit" class="reviewDelete" type="submit" value="DELETE" name="submit">
                                        </form>
                                    {{/equal}}
                                {{/if}}
                            </div>
                        </div>
                        <div class="col-sm-10">
                            <div class="review-body">
                                <p class="reviewRating">{{this.rating}}</p>
                                <p class="reviewTitle">{{this.title}}</p>
                                <p class="reviewText">{{this.review}}</p>
                                <div class="reviewGallery">
                                    <div class="row small-gutter">
                                        {{#each this.photos}}
                                            <div class="col-sm-2 col-xs-3">
                                                <a href="/{{this}}" data-toggle="lightbox" data-gallery="{{../this.username}}Gallery" class="vendor-item reviewPhotoWrapper">
                                                    <div class="reviewPhoto" style="background-image: url(/{{this}})"></div>
                                                </a>
                                            </div>
                                        {{/each}}
                                    </div>
                                </div>
                            </div>
                        </div>
                    {{/each}}
                {{else}}
                    <h4>There are no reviews for this vendor yet. Be the first!</h4>
                {{/if}}

            </div>
            <div class="review-link">
                <a href="/vendor/{{vendor.vendor_url}}/review" class="review-button">Leave a Review</a>
            </div>

        </div>

    </div>
</div>



