

<div id="featured-vendor">
    <h3>FEATURED VENDORS</h3>

    <div class="featured-carousel">
        {{#each featured}}
            <div class="featured-box">
                <div class="row">
                    <div class="col-sm-5">
                        <div class="feat-img" style="background-image: url(/{{this.featured_image}})"></div>
                    </div>
                    <div class="col-sm-7">
                        <div class="desc-box">
                            <h2>{{this.vendor_name}}</h2>
                            <p class="vend-cat"></p>
                            <div class="overflow-box">
                                <p class="vend-desc">{{this.description}}</p>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="vend-info">
                                        <div class="row">
                                            <div class="col-sm-2">
                                                <span>Address: </span>
                                            </div>
                                            <div class="col-sm-10">
                                                <p class="vend-add">{{this.address}}, {{this.address_2}}
                                                    <br>{{this.city}}, {{this.province}} {{this.postal_code}}</p>
                                            </div>
                                            <div class="col-sm-2">
                                                <span>Phone: </span>
                                            </div>
                                            <div class="col-sm-10">
                                                <p class="vend-phone">{{this.phone_number}}</p>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <!--<p class="vend-price">Price: {{this.price}}</p>-->
                                <!--<p class="vend-rating" >Rating: {{this.rating}}</p>-->
                                <a class="vend-view" href="/vendor/{{this.vendor_url}}/">View</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>

<div id="vendors-list">
    <div id="vendor-list-header">
        <div class="container">
            <div class="vend-list-title">
                <h3>VENDOR LIST</h3>
            </div>
            <div class="filters">
                <div class="row">
                    <div class="col-sm-3">
                        <div class="filter">
                            <label for="search">Keyword Search</label>
                            <input class="search search-filter">
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="filter">
                            <label for="categoryselect">Category</label>
                            <select class="select-filter cat-s chosen" id="category-search" name="categoryselect">
                                    <option value="All">All</option>
                                {{#each categories}}
                                    <option value="{{this.category_name}}">{{this.category_name}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="filter">
                            <label for="cityselect">Location</label>
                            <select class="select-filter city-s chosen" id="city-search" name="cityselect">
                                <option value="All">All</option>
                                {{#each city}}
                                    <option value="{{this.city}}">{{this.city}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="filter price-filter">
                            <label for="price">Price</label>
                            <div class="price-checkboxes">
                                <input class="price-checkbox" type="checkbox" name="price" id="oneDollar" data-value="$">
                                <label class="price-label one-dollar" for="oneDollar">$</label>
                                <input class="price-checkbox" type="checkbox" name="price" id="twoDollar" data-value="$$">
                                <label class="price-label two-dollar" for="twoDollar">$$</label>
                                <input class="price-checkbox" type="checkbox" name="price" id="threeDollar" data-value="$$$">
                                <label class="price-label three-dollar" for="threeDollar">$$$</label>
                                <input class="price-checkbox" type="checkbox" name="price" id="fourDollar" data-value="$$$$">
                                <label class="price-label four-dollar" for="fourDollar">$$$$</label>
                                <button class="sort" data-sort="vendPrice">Sort</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-sm-offset-2 col-sm-8">
                <div id="no-vendors">
                    <h4>We're sorry, but there are no vendors matching your search criteria. Please try another search.</h4>
                </div>
            </div>
        </div>
            <div id="vendor-list">
                <ul class="paginationTop"></ul>
                <div class="row">
                    <div class="list">
                        {{#each vendor}}
                            <div class="vendor">
                                <div class="col-sm-6">
                                    <div class="box">
                                        <div class="feat-img" style="background-image: url(/{{this.featured_image}})"></div>
                                        <div class="desc-box">
                                            <h2 class="vendName">{{this.vendor_name}}</h2>
                                            <p class="vendCat">{{this.category}}</p>
                                            <p class="vendAdd">{{this.address}}, {{this.address_2}}</p>
                                            <p class="vendCity">{{this.city}},</p>
                                            <p class="vendAdd2" >{{this.province}} {{this.postal_code}}</p>
                                            <!--<div class="row">-->
                                            <p class="vendPrice">{{this.price}}</p>
                                            <!--<p class="vend-rating" >Rating: {{this.rating}}</p>-->
                                            <a class="vend-view" href="/vendor/{{this.vendor_url}}/">View</a>
                                            <!--</div>-->
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {{/each}}
                    </div>
                </div>
                <ul class="paginationBottom"></ul>
        </div>
    </div>
</div>



