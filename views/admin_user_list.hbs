<div id="users-list">
    <div id="user-list-header">
        <div class="container">
            <div class="user-list-title">
                <h3>ADMIN USER LIST</h3>
            </div>
            <div class="filters">
                <div class="row">
                    <div class="col-sm-3">
                        <div class="filter">
                            <label for="search">Keyword Search</label>
                            <input class="search search-filter">
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="filter">
                            <label for="categoryselect">Users</label>
                            <select class="select-filter cat-s chosen" id="category-search" name="categoryselect">
                                <option value="All">All</option>
                                {{#each users}}
                                    <option value="{{this.name}}">{{this.name}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="filter">
                            <label for="cityselect">Vendors</label>
                            <select class="select-filter city-s chosen" id="city-search" name="cityselect">
                                <option value="All">All</option>
                                {{#each vendor}}
                                    <option value="{{this.vendor_name}}">{{this.vendor_name}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div id="user-list">
            <ul class="paginationTop"></ul>
            <div class="row">
                <div class="list">
                    {{#each users}}
                        <div class="col-sm-6">
                            <div class="user">
                                <p class="userFullName">{{this.name}}</p>
                                <p class="userName">{{this.username}}</p>
                                <p class="userEmail">{{this.email}}</p>
                                <div class="userVendors">
                                    {{#if this.businesses}}
                                        <p>Business Owned:</p>
                                        {{#each this.businesses}}
                                            <p class="userOwned">{{this}}</p>
                                        {{/each}}
                                    {{/if}}
                                </div>
                            </div>
                        </div>
                    {{/each}}
                </div>
            </div>
            <ul class="paginationBottom"></ul>
        </div>
    </div>
</div>